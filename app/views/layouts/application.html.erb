<!DOCTYPE html>
<html>
  <head>
    <title>Clamorous</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div id="main-container" class="container">
      <div class="row">
        <div class="col-xs-6">
          <h1>üêö Clamorous üêö</h1>
        </div>
        <div id="sign-bar" class="col-xs-6">
          <% if current_user %>
            <% if current_user.admin? %>
              <%= link_to "Edit Items", admin_items_path %>
              <%= link_to "Customer Orders", admin_orders_path %>
            <% end %>
            <%= link_to "Profile", current_user %>
            <%= link_to "Sign out", logout_path, method: :delete, class: "btn btn-danger" %>
          <% else %>
            <%= render partial: 'partials/sign_in' %>
          <% end %>
        </div>
      </div>
    </div>
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, class: "alert alert-#{name}" %>
    <% end %>
    <%= yield %>
  </div>
</body>
</html>
