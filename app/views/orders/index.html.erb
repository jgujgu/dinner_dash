<h3>My Orders</h3>

<table border ="1">
  <tr>
    <th>Order ID</th>
    <th>Status</th>
    <th class="money">Cost</th>
  </tr>
  <% current_user.orders.each do |order| %>
    <tr>
      <td><%= order.id %></td>
      <td><%= order.order_status %></td>
      <td class="money"><%= number_to_currency(order.order_total_cost) %> </td>
      <td><%=link_to "Details", order_path(order), class: "btn btn-success" %>
    <% end %>
  </table>


