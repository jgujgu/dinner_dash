<h3>Admin Categories</h3>
<ul>
  <% @categories.each do |category| %>
    <div class = "category_list">
      <li id = "category_<%=category.name%>">
        <%=category.name %>
        <%= link_to "Edit", edit_admin_category_path(category), class: "btn btn-success", id: "btn-edit" %>
        <%= link_to "Delete", admin_category_path(category), method: :delete, class: "btn btn-danger", id: "btn-delete"%></li>
    <% end %>
  </div>
</ul>
<%= link_to "New Category", new_admin_category_path, class: "btn btn-success", id: "btn-edit"%>
