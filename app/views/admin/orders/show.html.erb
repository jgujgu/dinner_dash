<h2>  Admin Details for Order ID: <%=@order.id %>  </h2>

<ul>
  <li> Date ordered: <%= @order.date %></li>
  <li> Time ordered: <%= @order.time %> </li>
  <li> Purchaser name: <%= @order.user.full_name %> </li>
  <li> Email: <%= @order.user.email %> </li>
</ul>

<table border ="1">
  <p> Items Purchased </p>
  <tr>
    <th> Item name &nbsp; &nbsp; &nbsp;</th>
    <th> Quantity &nbsp; &nbsp; &nbsp;</th>
    <th> Price </th>
    <th> Subtotal &nbsp; &nbsp; &nbsp;</th>
   </tr>
  <% @order.order_items.each do |order_item| %>
  <tr>
    <td><%= link_to order_item.item.title, admin_item_path(order_item.item_id)%></td>
    <td><%= order_item.quantity %></td>
    <td><%= number_to_currency(order_item.item.price_in_dollars)%> </td>
    <td><%= number_to_currency(order_item.item_subtotal)%></td>
    <% end %>
</table>

<p> <strong>Order Status:</strong> <%= @order.order_status %></p>
<p> <strong>Total cost for the order:</strong> <%= number_to_currency(@order.order_total_cost) %> </p>

<%= link_to "Admin Orders", admin_orders_path %>