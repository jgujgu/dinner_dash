<h1>Menu Item Details: <%= @item.title %> </h1>
<p><%= @item.description %> $<%= @item.price %></p>
<p><%= image_tag @item.image, size: "100" %></p>

<p> Item Categories:
<% @item.categories.each do |category| %>
  <%= category.name %>
  <% end %>
</p>

<%= link_to "Back", admin_items_path  %>
<%= link_to "Edit", edit_admin_item_path(@item) %>
<%= link_to "Delete", admin_item_path(@item), method: :delete %>
